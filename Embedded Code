#include "inc/tm4c123gh6pm.h
void RGBLED_Init (void){
SYSCTL_RCGCGPIO |= 0x20;
while((SYSCTL_PRGPIO_R&0x20)==0){};
GPIO_PORTF_LOCK_R=0x4C4F434B;
GPIO_PORTF_CR_R|=0x08;
GPIO_PORTF_DIR_R |=0x08;
GPIO_PORTF_DEN_R |= 0x08;
GPIO_PORTF_AMSEL_R &=~0x08;
GPIO_PORTF_PCTL_R &=~0x0000F000 ;
GPIO_PORTF_AFSEL_R &=~0x08;
GPIO_PORTF_AFSEL_R &=~0x08;
GPIO_PORTF_PCTL_R &= ~0x0000F000;
GPIO_PORTF_DATA_R &=~0x08;
}
void lcd_init(void)
{
SYSCTL_RCGCGPIO |= 0x0A; //activate port B and D 00001010
while((SYSCTL_PRGPIO_R&0x0A)==0){};
GPIO_PORTB_CR_R=0xFF;
GPIO_PORTB_DIR_R=0xFF;
GPIO_PORTB_AFSEL_R=0x00;
GPIO_PORTB_PCTL_R=0x0000000;
GPIO_PORTB_DEN_R=0xFF;
GPIO_PORTB_AMSEL_R=0x00;
GPIO_PORTB_PUR_R=0xFF;
GPIO_PORTB_DATA_R=0x00;
void lcd_command(char command){
GPIO_PORTD_DATA_R&=~0xFB// lcd read data and the type of data are command
GPIO_PORTB_DATA_R=command ;// to send the value of command (clear,wake up ,display on )
delay();
GPIO_PORTD_DATA_R&=~0xFA// to change latch (covert enable from 1 to 0 vice versa)
}
PORT D 0 0 0 0 0 Rs RW E ........11111011>>>>>TO set RS
PORT D 0 0 0 0 0 Rs RW E.........11111010>>>>>>to set E(enable)
void lcd_DATA(char DATA){
GPIO_PORTD_DATA_R&=~FA
GPIO_PORTB_DATA_R=DATA ;
dalay();
GPIO_PORTD_DATA_R&=~FB
}
//PORD D initialize
GPIO_PORTD_LOCK_R= 0x4C4F434B;
GPIO_PORTD_CR_R|=0x07;
GPIO_PORTD_DIR_R|=0x07;
GPIO_PORTD_AFSEL_R &=~0x07;
GPIO_PORTD_PCTL_R &=~0x0000FFF;
GPIO_PORTD_DEN_R|=0x07;
GPIO_PORTD_AMSEL_R &=~0x07;
GPIO_PORTD_PUR_R &=~0x07;
GPIO_PORTD_DATA_R &=~0x07;
}

void switch_init(void){
SYSCTL_RCGCGPIO |= 0x20;
while((SYSCTL_PRGPIO_R&0x01)==0){};
GPIO_PORTF_LOCK_R=0x4C4F434B;
GPIO_PORTF_CR_R|=0x01;
GPIO_PORTF_DIR_R |= 0x01;
GPIO_PORTF_DEN_R |= 0x01;
GPIO_PORTF_AMSEL_R &=~0x01;
GPIO_PORTF_PCTL_R &=~0x0000000F;
GPIO_PORTF_PUR_R |= 0x01;
}
void clear {
GPIO_PORTB_DATA_R |=0x01 ;  // clear display sceen
}
void Return  {
GPIO_PORTB_DATA_R |=0x02 ;  // Return cursor to home
}
void D0 to D7 {
GPIO_PORTB_DATA_R|=0x38 ;   // Select 8-Bit Mode of LCD
}
void wakeup {
GPIO_PORTB_DATA_R |=0x30; //
}
